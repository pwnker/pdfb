{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "./.*.cjs",
    "src/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
